<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView

        android:scaleType="centerCrop"
        android:id="@+id/imageviewqc"
        android:layout_width="match_parent"
        android:layout_height="200dp">


    </ImageView>
   <View
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:background="@drawable/custom_background_qc"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignBottom="@+id/imageviewqc"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/imageqc"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="2dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/txttenqc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên bài hát"
                android:textSize="17dp"
                android:layout_marginTop="5dp"
                ></TextView>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/txtgtqc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chào mừng bạn đến với ca khúc hot nhất hiện nay "
                android:textSize="13dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="100dp"
                android:maxLines="2"
                ></TextView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>